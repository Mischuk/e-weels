#wrap
  width 1170px
  height 677px
  position absolute
  left 50%
  top 0
  margin-left -(@width/2)

#viewport
  position relative
  width 100%
  height 100%
  overflow hidden
  margin-left auto
  margin-right auto


#viewport .smoke
  position: absolute;
  width: 800px;
  height: 800px;
  background:url('http://i.imgur.com/pVI5HbP.png') no-repeat;
  bottom: 230px;
  margin-left:10px

#nav-lead
  position relative
  height 677px
  background url("../images/screen_1/bg/lead.jpg") no-repeat top center
  &:after
    content ''
    position absolute
    left 0
    bottom -130px
    width 100%
    height 131px
    background url("../images/screen_1/bg/lead-bottom.png") no-repeat top center
    z-index 100
  .title
    thin()
    padding-top 70px
    margin-bottom 45px
    color #fff
    text-align center
    .top
      font-size 60px
      .lead-text
        display inline-block
        margin-left 30px
        width 585px
        height 59px
        background url("../images/screen_1/logo.png") no-repeat 0 0
    .bottom
      text-align right
      font-size 44px
      padding-right 135px
      text-transform uppercase
  .intro
    width 887px
    height 94px
    padding-top 23px
    background url("../images/screen_1/title-bg.png") no-repeat 0 0
    margin 0 auto
    text-align center
    color #fff
    font-size 18px
    line-height 25px
    text-transform uppercase
    p
      margin 0
  .lead-image
    position relative
    width 758px
    height 287px
    margin-left auto
    margin-right auto
    margin-top -60px
    background url("../images/screen_1/lead-image.png") no-repeat 0 0
  .icons
    position absolute
    left 0
    bottom 15px
    width 100%
    clearfix()
    .icon-yellow,
    .icon-gray
      float left
      width 25%
      text-align center
      .image
        position relative
        background url('../images/sprite.png') no-repeat -228px -63px
        width 106px
        height 109px
        margin-left auto
        margin-right auto
        margin-bottom 10px
        &:after
          content ''
          position absolute
          left 50%
          background-repeat no-repeat
          background-image url('../images/sprite.png')
      .text
        font-size 16px
        color #fff
        text-transform uppercase
    .icon-yellow
      .image:hover
        background-position -353px -63px
    .icon-gray
      .image
        background-position -45px -138px
    .icon-1 .image:after
      top 34px
      background-position -247px 0
      width 43px
      height 43px
      margin-left -(@width/2)
    .icon-2 .image:after
      top 40px
      background-position -304px 0
      width 71px
      height 25px
      margin-left -(@width/2)
    .icon-3 .image:after
      top 32px
      background-position -389px 0
      width 47px
      height 42px
      margin-left -(@width/2)
    .icon-4 .image:after
      top 32px
      background-position -439px 0
      width 55px
      height 45px
      margin-left -(@width/2)



