/* Форма */
$placeholder-color = #b6b6b6


.form
    &-input   /* input */
        width 100%
        height 54px
        border 1px solid #fff
        color $black
        display block
        margin 0
        margin-bottom 12px
        outline none
        box-shadow 0 1px 10px -5px rgba(0,0,0,.1)
        &:focus
            color $black
        &::-webkit-input-placeholder
            color $placeholder-color
        &::-moz-placeholder
            color $placeholder-color /* Firefox 19+ */
        &:-moz-placeholder
            color $placeholder-color /* Firefox 18- */
        &:-ms-input-placeholder
            color $placeholder-color
    &-label
        position relative
    &-submit   /* Кнопка submit */
        cursor pointer
        outline none
        -webkit-appearance none
label.error
    display none !important

