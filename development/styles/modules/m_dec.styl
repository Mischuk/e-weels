.m_dec
  width 100%
  height 100%
  left 50%
  margin-left -(@width/2)
  top 0
  position absolute
  @media screen and (max-width: 1024px)
    display none !important
  > div
    position absolute
    z-index 1
    animation-name decMoves
    animation-duration 20000ms
    animation-iteration-count infinite
  .dec-1,
  .dec-2,
  .dec-3
    width 288px
    height 288px
  .dec-1
    background url("../images/dec/1.png") no-repeat 0 0
    right 0
    bottom 0
  .dec-2
    background url("../images/dec/2.png") no-repeat 0 0
    left 5%
    top 0
  .dec-3
    left -13%
    top 150px
    background url("../images/dec/3.png") no-repeat 0 0
  .dec-4,
  .dec-5,
  .dec-6
    width 83px
    height 83px
  .dec-4
    background url("../images/dec/4.png") no-repeat 0 0
    left 50%
    bottom 0
    margin-left -130px
  .dec-5
    background url("../images/dec/5.png") no-repeat 0 0
    right 27%
    top 420px
    z-index 0
  .dec-6
    background url("../images/dec/6.png") no-repeat 0 0
    right 27%
    top 120px
    z-index 0
  .dec-7
    width 144px
    height 145px
    background url("../images/dec/7.png") no-repeat 0 0
    left 5%
    bottom 10%
    z-index 0

@keyframes decMoves
    0%
      transform scale(1)
    50%
      transform scale(0.8)
    100%
      transform scale(1)

