span.orange
  color $orange
span.red
  color $red

.order
  text-align center
  .hook-btn
    position relative
  a
    position relative
    display block
    margin-left auto
    margin-right auto
    width 300px
    height 55px
    line-height 51px
    border 2px solid #fff
    color #fff
    font-size 16px
    text-transform uppercase
    box-shadow 0 5px 4px -1px rgba(0,0,0,.15)
    border-radius 2px
    &:active
      transform translateY(1px)
      box-shadow 0 4px 4px -1px rgba(0,0,0,.15)
    &:hover
      .bg .top
        background #bc0e00
      .bg .bottom
        background #d31000
  .text
    position relative
    z-index 10
  .bg
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    .top, .bottom
      transition all .5s ease-out
      width 100%
      height 50%
    .top
      background #d31000
    .bottom
      background #bc0e00



