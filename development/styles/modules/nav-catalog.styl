#nav-catalog
  position relative
  height 823px
  background url("../images/screen_3/bg-middle.png") no-repeat 50% -5px
  &:before
    content ''
    position absolute
    left 0
    top -130px
    width 100%
    height 131px
    z-index 11
    background url("../images/screen_3/bg-top.png") no-repeat top center
  &:after
    content ''
    position absolute
    left 0
    bottom -125px
    width 100%
    height 131px
    z-index 11
    background url("../images/screen_3/bg-bottom.png") no-repeat center 1px
  .lead-title
    width 565px
    height 36px
    margin-left auto
    margin-right auto
    margin-top 65px
    margin-bottom 40px
    background url("../images/screen_3/title.png") no-repeat 0 0
  .carousel
    position relative
    width 986px
    height 651px
    margin-left auto
    margin-right auto
    background url("../images/screen_3/carousel-bg.png") no-repeat 0 0
    .carousel-initial
      position absolute
      left 50%
      top 50%
      height 480px
      width 860px
      margin-left -(@width/2)
      margin-top -270px
      font-size 17px
      *
        outline none
    .slick-dots
      text-align center
      position absolute
      width 100%
      bottom -105px
      height 15px
      left 0
      li
        display inline-block
        vertical-align middle
        margin-left 4px
        margin-right 4px
        button
          text-indent -9999px
          width 15px
          height 15px
          border none
          background #bbb
          border-radius 50%
        &.slick-active button
          background $orange
          color $orange
          animation-name changeCurrentMenu
          animation-duration 500ms
    .slick-arrow
      position absolute
      top 50%
      width 39px
      height 85px
      margin-top -(@height/2)
      background-image url("../images/sprite.png")
      background-repeat no-repeat
      background-color transparent
      border none
      display block
      text-indent -9999px
    .slick-prev
      background-position 0 0
      left -140px
      &:hover
        background-position -106px 0
    .slick-next
      background-position -53px 0
      right -140px
      &:hover
        background-position -159px 0
    .left
      width 354px
      float left
      .image
        height 312px
        line-height 312px
        text-align center
        width 100%
        margin-bottom 20px
        background #fff
        .carousel-colors
          height 312px
          overflow hidden
        .slide
          height 312px
          line-height 308px
          img
            display inline-block
            vertical-align middle
            max-width 100%
            max-height 100%
      .price
        padding-bottom 15px
        margin-bottom 15px
        border-bottom 1px solid #f1f1f1
        span
          heavy()
          font-size 33px
      .colors-nav
        margin-top 15px
      .color-dots
        text-align left
        li
          display inline-block
          vertical-align middle
          margin-bottom 5px
          margin-right 5px
          width 38px
          height 38px
          button
            display block
            text-indent -9999px
            border none
            border-radius 50%
            background none
            width 100%
            height 100%
            background-image url("../images/sprite.png")
            background-repeat no-repeat
    .right
      float right
      width 450px
      .order a
        margin-left 0
        margin-top 20px
      .title
        font-size 33px
        border-bottom 1px solid #f1f1f1
        padding-bottom 15px
        margin-bottom 15px
        heavy()
        .small
          font-size 20px
      .desc
        padding-left 25px
        border-bottom 1px solid #f1f1f1
        padding-bottom 5px
        margin-bottom 15px
        .item
          position relative
          margin-bottom 10px
          &:after
            content ""
            position absolute
            left -25px
            top 50%
            background-image url("../images/sprite.png")
            background-repeat no-repeat
          &.icon-1:after
            background-position -9px -102px
            width 14px
            height 16px
            margin-top -(@height/2)
          &.icon-2:after
            width 15px
            height 16px
            background-position -9px -132px
            margin-top -(@height/2)
          &.icon-3:after
            width 17px
            height 18px
            background-position -9px -161px
            margin-top -(@height/2)
          &.icon-4:after
            width 15px
            height 16px
            background-position -9px -192px
            margin-top -(@height/2)
          &.icon-5:after
            width 20px
            height 16px
            background-position -9px -222px
            margin-top -(@height/2)
      .details
        .row
          clearfix()
          &:first-child
            .item
              width 33.333%
          &:last-child
            .item
              width 50%
          .item
            float left
            height 65px
            .val-title
              position relative
              font-size 16px
              &:after
                content ""
                position absolute
                top 50%
                background-image url("../images/sprite.png")
                background-repeat no-repeat
            .val
              font-size 20px
            &.val-icon-1,
            &.val-icon-4,
            &.val-icon-5
              padding-left 30px
            &.val-icon-2,
            &.val-icon-3
              padding-left 38px
            &.val-icon-1 .val-title:after
              left -30px
              background-position -39px -102px
              width 21px
              height 27px
              margin-top -(@height/2)
            &.val-icon-2 .val-title:after
              width 28px
              height 22px
              background-position -70px -102px
              margin-top -(@height/2)
              left -38px
            &.val-icon-3 .val-title:after
              width 28px
              height 28px
              background-position -108px -102px
              margin-top -(@height/2)
              left -38px
            &.val-icon-4 .val-title:after
              left -30px
              background-position -146px -102px
              width 26px
              height 26px
              margin-top -(@height/2)
            &.val-icon-5 .val-title:after
              left -30px
              background-position -182px -102px
              width 23px
              height 24px
              margin-top -(@height/2)

