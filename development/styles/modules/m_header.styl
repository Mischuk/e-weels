.m_header
  smooth()
  anim()
  position fixed
  z-index 500
  min-width 1170px
  left 0
  top 0
  width 100%
  height 93px
  background #fff
  box-shadow 0 0 5px rgba(0, 0, 0, .25)
  &.small
    height 60px
    .tel, .menu li
      line-height 60px

  .tel
    transition all .25s linear
    heavy()
    float right
    font-size 18px
    line-height 93px
    span
      display inline-block
      font-size 30px
      color $red
  .menu
    float left
    ul
      clearfix()
    li
      transition all .25s linear
      position relative
      float left
      line-height 93px
      text-align center
      &:after
        content ''
        position absolute
        left 0
        top 50%
        height 53px
        width 1px
        background #f6f6f6
        margin-top -(@height/2)
      &:first-child:after
        display none
      &:last-child:before
        content ''
        position absolute
        right 0
        top 50%
        height 53px
        width 1px
        background #f6f6f6
        margin-top -(@height/2)
      &.current
        a
          color $orange
          animation-name changeCurrentMenu
          animation-duration 700ms
      a
        transition color .25s linear
        display inline-block
        vertical-align middle
        font-size 16px
        padding-left 15px
        padding-right 15px
        color $black
        text-transform uppercase
        &:hover
          color $orange
      .logo
        heavy()
        height 100%
        margin-right 110px
        color $black !important
        font-size 36px
@keyframes changeCurrentMenu
    0%
      transform scale(1)
    50%
      transform scale(0.8)
    0%
      transform scale(1)